#include <fmx.h>
#pragma hdrstop

#include "LMS.h"
#include "Book.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.fmx"
TForm1 *Form1;
//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner)
	: TForm(Owner)
{
}
//---------------------------------------------------------------------------
void __fastcall TForm1::AddBtnClick(TObject *Sender)
{
	String taskText = InputField->Text;
	Book book(taskText, "NoName", 123);
	BookHandler client();
	client.addBook(book);
	BooksList->Items->Add(taskText);
}
